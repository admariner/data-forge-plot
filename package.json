{
    "name": "data-forge-plot",
    "version": "0.0.6",
    "description": "Plotting API for use with Data-Forge.",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "scripts": {
        "clean": "rm -rf build/*",
        "build": "tsc",
        "clean-build": "rm -rf build/* && tsc",
        "build:watch": "tsc --watch",
        "clean-build:watch": "rm -rf build/* && tsc --watch",
        "test": "nyc mocha --opts ./src/test/mocha.opts",
        "test:watch": "nyc mocha --watch --watch-extensions ts --opts ./src/test/mocha.opts",
        "prepublishOnly": "tsc"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/data-forge/data-forge-plot.git"
    },
    "keywords": [],
    "author": "ashley@codecapers.com.au",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/data-forge/data-forge-plot/issues"
    },
    "homepage": "https://github.com/data-forge/data-forge-plot#readme",
    "dependencies": {
        "data-forge": "^1.0.10",
        "express": "^4.16.3",
        "fs-extra": "^6.0.1",
        "fs-jetpack": "^1.3.0",
        "nightmare": "^3.0.1",
        "opn": "^5.3.0"
    },
    "peerDependencies": {
        "data-forge": "^1.0.10"
    },
    "devDependencies": {
        "@types/chai": "4.0.4",
        "@types/express": "^4.11.1",
        "@types/fs-extra": "^5.0.2",
        "@types/mocha": "2.2.43",
        "@types/node": "8.0.28",
        "chai": "4.1.2",
        "mocha": "3.5.3",
        "nyc": "11.8.0",
        "source-map-support": "0.5.6",
        "ts-node": "3.3.0",
        "typescript": "2.5.2"
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "exclude": [
            "**/*.d.ts",
            "src/test/**/*",
            "build/**/*",
            "docs/**/*",
            "coverage/**/*"
        ],
        "reporter": [
            "text-summary"
        ],
        "all": true
    }
}
