{
    "name": "data-forge-plot",
    "version": "0.2.4",
    "description": "Plotting API for use with Data-Forge.",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "scripts": {
        "c": "npm run clean",
        "clean": "rm -rf build/*",
        "b": "npm run build",
        "build": "tsc",
        "clean-build": "npm run clean && npm run build",
        "build:watch": "tsc --watch",
        "clean-build:watch": "rm -rf build/* && tsc --watch",
        "t": "npm run test",
        "test": "nyc mocha --opts ./src/test/mocha.opts",
        "test:watch": "mocha --watch --watch-extensions ts --opts ./src/test/mocha.opts",
        "tw": "npm run test:watch",
        "prepublishOnly": "npm run lint && npm test && npm run clean && npm run build",
        "l": "npm run lint",
        "lint": "tslint -p tsconfig.json -t stylish",
        "fix-lint": "tslint --fix -p tsconfig.json -t stylish"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/data-forge/data-forge-plot.git"
    },
    "keywords": [],
    "author": "ashley@codecapers.com.au",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/data-forge/data-forge-plot/issues"
    },
    "homepage": "https://github.com/data-forge/data-forge-plot#readme",
    "dependencies": {
        "@data-forge-plot/c3": "^0.0.7",
        "@data-forge-plot/chart-def": "^1.0.1",
        "@data-forge/serialization": "^1.0.0",
        "capture-template": "^1.1.10",
        "fs-jetpack": "^1.3.1",
        "inflate-template": "^1.1.6",
        "opn": "^5.5.0",
        "sugar": "^2.0.6"
    },
    "peerDependencies": {
        "data-forge": "^1.6.7"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/express": "^4.16.1",
        "@types/fs-extra": "^5.0.5",
        "@types/globby": "^8.0.0",
        "@types/handlebars": "^4.1.0",
        "@types/mocha": "^2.2.48",
        "@types/node": "^8.10.45",
        "browserify": "^16.2.3",
        "chai": "^4.2.0",
        "fs-extra": "^6.0.1",
        "mocha": "^3.5.3",
        "nyc": "^11.9.0",
        "source-map-support": "^0.5.11",
        "ts-node": "^3.3.0",
        "tslint": "^5.14.0",
        "typescript": "2.5.2"
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "exclude": [
            "**/*.d.ts",
            "src/test/**/*",
            "build/**/*",
            "docs/**/*",
            "coverage/**/*"
        ],
        "reporter": [
            "text-summary"
        ],
        "all": true
    }
}
